#include<stdio.h>
#include<math.h>
int prime(int a,int b);
int main()
{
	int num,sum;
	printf("Enter a number ");
	scanf("%d",&num);
	if(prime(num,num/2) == 0)
	{	printf("%d is not a prime number",num);	}
	else
	{	printf("%d is a prime number",num);	}
	return 0;
}

int prime(int num,int x)
{
	int a;
	if(x==1)
		return 1;
	else
	{
		a=num%x;
		if(a==0)
			return 0;
		else
			return prime(num,x-1);
	}
}
